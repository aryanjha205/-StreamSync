{
  "version": 2,
  "builds": [
    {
      "src": "backend.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
